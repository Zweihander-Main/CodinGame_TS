{
	"name": "codingame_ts",
	"version": "0.0.1",
	"description": "",
	"keywords": "",
	"homepage": "",
	"main": "",
	"author": "Zweih√§nder",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "gulp",
		"watch": "gulp watch"
	},
	"jest": {
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.hbs$": "<rootDir>/src/__mocks__/hbsMock.js"
		}
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		},
		"globals": {
			"readline": true,
			"printTime": true
		}
	},
	"jshintConfig": {
		"esversion": 9,
		"node": true,
		"globals": {
			"afterAll": false,
			"afterEach": false,
			"beforeAll": false,
			"beforeEach": false,
			"describe": false,
			"expect": false,
			"fit": false,
			"it": false,
			"jasmine": false,
			"jest": false,
			"pending": false,
			"pit": false,
			"require": false,
			"test": false,
			"xdescribe": false,
			"xit": false,
			"xtest": false,
			"readline": true
		},
		"laxbreak": true
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab",
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"maintained node versions",
		"> 0.2%",
		"last 2 versions",
		"Firefox ESR",
		"not dead"
	],
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"@babel/register": "^7.6.2",
		"@typescript-eslint/eslint-plugin": "^2.6.0",
		"@typescript-eslint/parser": "^2.6.0",
		"babel-jest": "^24.9.0",
		"del": "^5.1.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-jest": "^23.0.2",
		"eslint-plugin-prettier": "^3.1.1",
		"gulp": "^4.0.2",
		"gulp-babel": "^8.0.0",
		"gulp-debug": "^4.0.0",
		"jest": "^24.9.0",
		"jest-mock-console": "^1.0.0",
		"minipack_ts": "0.3.4",
		"prettier": "^1.18.2",
		"ts-loader": "^6.2.1",
		"typescript": "^3.6.4",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.9"
	},
	"dependencies": {
		"@babel/parser": "^7.6.4",
		"@babel/types": "^7.6.3",
		"ts-bundle": "^0.3.0",
		"typescript-bundle": "^1.0.16"
	}
}
