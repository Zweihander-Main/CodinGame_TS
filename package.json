{
	"name": "codingame_ts",
	"version": "0.0.1",
	"description": "",
	"keywords": "",
	"homepage": "",
	"main": "",
	"author": "Zweih√§nder",
	"private": true,
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"build": "webpack",
		"watch": "webpack --watch"
	},
	"jest": {
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.hbs$": "<rootDir>/src/__mocks__/hbsMock.js"
		}
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parser": "@typescript-eslint/parser",
		"plugins": ["@typescript-eslint"],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"quotes": ["error", "single"],
			"semi": ["error", "always"],
			"no-console": "off",
			"no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
		},
		"globals": {
			"readline": true,
			"printTime": true
		}
	},
	"jshintConfig": {
		"esversion": 9,
		"node": true,
		"globals": {
			"afterAll": false,
			"afterEach": false,
			"beforeAll": false,
			"beforeEach": false,
			"describe": false,
			"expect": false,
			"fit": false,
			"it": false,
			"jasmine": false,
			"jest": false,
			"pending": false,
			"pit": false,
			"require": false,
			"test": false,
			"xdescribe": false,
			"xit": false,
			"xtest": false,
			"readline": true
		},
		"laxbreak": true
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab",
			"max-empty-lines": 2,
			"comment-whitespace-inside": null,
			"declaration-block-no-shorthand-property-overrides": true,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"maintained node versions",
		"> 0.2%",
		"last 2 versions",
		"Firefox ESR",
		"not dead"
	],
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/register": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^2.4.0",
		"@typescript-eslint/parser": "^2.4.0",
		"babel-jest": "^24.7.1",
		"del": "^5.1.0",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-jest": "^22.4.1",
		"eslint-plugin-prettier": "^3.0.1",
		"gulp-babel": "^8.0.0",
		"gulp-debug": "^4.0.0",
		"jest": "^24.7.1",
		"jest-mock-console": "^0.4.2",
		"prettier": "^1.17.0",
		"ts-loader": "^6.2.0",
		"typescript": "^3.6.4",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9"
	}
}
